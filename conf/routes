# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                                       controllers.Application.home

# recipes endpoint
GET            /api/v1/recipes                         controllers.RecipeController.list
GET            /api/v1/recipes/:recipeId               controllers.RecipeController.show(recipeId: Long)

POST           /api/v1/recipes/                        controllers.RecipeController.create

# @controllers notation works with non-static controllers

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                           controllers.Assets.at(path="/public", file)

OPTIONS        /*path                                  controllers.Application.preflight(path: String)
