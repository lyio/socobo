# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                                       controllers.Assets.at(path="/public/app", file="index.html")

# recipes page
GET            /api/v1/recipes                         controllers.RecipeController.list()

# @controllers notation works with non-static controllers
GET            /api/v1/:userId/fridge                  @controllers.FridgeController.fridge(userId)
POST           /api/v1/:userId/fridge/items            @controllers.FridgeController.addItem(userId)
GET            /api/v1/:userId/fridge/items/:id        @controllers.FridgeController.showItem(userId, id)

GET            /api/v1/user/:userName                  @controllers.UserController.profile(userName)

GET            /api/v1/produce                         @controllers.FridgeController.listProduce()

POST           /login                                  @controllers.LoginController.handleLogin()
POST           /logout                                 @controllers.LoginController.logout()

POST           /signup                                 @controllers.UserController.createUser()

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                           controllers.Assets.at(path="/public", file)
GET            /images/*file                           controllers.Assets.at(path="/public/app/images", file)
GET            /elements/*file                         controllers.Assets.at(path="/public/app/elements", file)
GET            /manifests/*file                        controllers.Assets.at(path="/public/app/manifests", file)
GET            /scripts/*file                          controllers.Assets.at(path="/public/app/scripts", file)
GET            /styles/*file                           controllers.Assets.at(path="/public/app/styles", file)
GET            /bower_components/*file                 controllers.Assets.at(path="/public/bower_components", file)


OPTIONS        /*path                                  controllers.Application.preflight(path)
